{
  "name": "AIO",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {
      "VARIANT": "17-bullseye",
      "NODE_VERSION": "18.19.1",
      "GO_VERSION":"1.20.4"
    }
  },
  "runArgs": ["--name", "vscode-dev", "--link", "local_mysql:mysql"],
  "customizations": {
    "vscode": {
      "settings": {
        "java.jdt.ls.java.home": "/docker-java-home"
      },
      "extensions": [
        "vscjava.vscode-java-pack",
        "pivotal.vscode-boot-dev-pack",
        "esbenp.prettier-vscode",
        "DEVSENSE.phptools-vscode"
      ]
    }
  },
  "forwardPorts": [8080, 5173, 8000, 54112, 51096, 80],
  "remoteUser": "vscode",
  "features": {
    "docker-in-docker": "latest",
    "docker-from-docker": "latest"
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE},target=/Users/kien,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/Projects/vscode/.gradle,target=/home/vscode/.gradle,type=bind,consistency=cached",    
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/Projects/vscode/.m2,target=/home/vscode/.m2,type=bind,consistency=cached",    
    "source=/Users/kien/Applications/wordpress,target=/workspaces/wordpress,type=bind,consistency=cached",
    "source=/tmp,target=/tmp,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/Projects/vscode/nginx,target=/etc/nginx,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/Projects/vscode/php,target=/etc/php,type=bind,consistency=cached"
  ],
  "postStartCommand": "bash /Users/kien/Projects/vscode/init.sh"
}
